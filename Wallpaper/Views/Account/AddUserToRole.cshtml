@model Wallpaper.ViewModels.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add Role To User</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" type="submit">Add</button>
}
